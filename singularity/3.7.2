#%Module
#
# Module definition for Singularity 3.7.2
#
# M. Bareford, EPCC, 14 July 2021

# Clashes
conflict singularity

# The text to print if someone types "module help singularity/3.7.2"
proc ModulesHelp { } {
puts stderr "\tSingularity 3.7.2"
puts stderr "\t=================\n"
puts stderr "\tInstalled by: EPCC"
puts stderr "\tCompiled with: go 1.15.7"
puts stderr "\tDate: July 2021\n"
}

set _module_name  [module-info name]
set is_module_rm  [module-info mode remove]
set sys        [uname sysname]

setenv SINGULARITY_TMPDIR        /tmp
setenv SINGULARITY_LOCALCACHEDIR /tmp

# Make sure the binaries are added to PATH
prepend-path PATH /work/y07/shared/cirrus-software/go/1.15.7/bin
prepend-path PATH /opt/singularity/3.7.2/bin
