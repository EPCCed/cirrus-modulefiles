#%Module
#
# Module definition for OpenFOAM v2206 Released June 2022
#

# Clashes

conflict openfoam

# To run

module load gcc/10.2.0
module load mpt/2.25
module load zlib/1.3.1

# User compilations may require

module load flex/2.6.4

# The text to print if someone types "module help openfoam"

proc ModulesHelp { } {
  puts stderr "OpenFOAM v2206\n"
  puts stderr "==============\n"
  puts stderr "Provides access to OpenFOAM v2206 Release June 2022"
}


set _module_name  [module-info name]
set is_module_rm  [module-info mode remove]
set sys        [uname sysname]

set openhome /work/y07/shared/cirrus-software/openfoam/v2206/OpenFOAM-v2206

setenv FOAM_INSTALL_PATH $openhome
setenv OPENFOAM_CURPATH $openhome

if { [ is-loaded openfoam/v2206 ] } {
  # The user still has all the OpenFOAM environment variables set.
  # One could issue a warning here.
} else {

  puts stderr  "******************** OpenFOAM v2206 ************************"
  puts stderr  "* OpenFoam v2206 Released June 2022."
  puts stderr  "* See https://www.openfoam.com/news/main-news/openfoam-v2206\n"
  puts stderr  "* You must now source the OpenFOAM etc/bashrc file"
  puts stderr  "* You can do this using the following command: "
  puts stderr  "*        source \$FOAM_INSTALL_PATH/etc/bashrc "
  puts stderr  "************************************************************"
}



